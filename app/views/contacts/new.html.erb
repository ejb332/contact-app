<h1 id="new-center">New Contact</h1>
<%= form_tag '/contacts', method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :age %>
    <%= text_field_tag :age, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :gender %>
    <%= text_field_tag :gender, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :diary %>
    <%= text_field_tag :diary, "", class: 'form-control' %>
  </div>
  <div>
    <%= submit_tag "Add contact", class: 'btn btn-success' %>
  </div>
<% end %>
<%= form_tag "/contacts", method: :get do %>
  <%= submit_tag "Cancel", class: 'btn btn-danger' %>
<% end %>